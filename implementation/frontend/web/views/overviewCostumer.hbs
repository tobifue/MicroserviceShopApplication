<body>
  <header>
    <h1>
      Costumer Page
    </h1>
  </header>

  <main>
    <h1>
      list of items
    </h1>
    <table class="table table-hover table-dark">
      <thead>
        <tr>
          <th>Mark item</th>
          <th>Item name</th>
          <th>Availible</th>
          <th>Price</th>
          <th>Pieces</th>
        </tr>
      </thead>
      <tbody>
        {{# each items}}
        <tr>
          <td>
            <form action="/markItem" method="post">
              <input type="hidden" id="nameId" name="name" value={{ this.name}}>
              <input type="hidden" id="vendorId" name="vendor" value={{ this.vendor}}>
              <input type="hidden" id="quantityId" name="quantity" value={{ this.quantity}}>
              <input type="hidden" id="priceId" name="price" value={{ this.price }}>
              <input type="submit" value="mark item">
            </form>
          </td>
          <form action="/addToCart" method="post">
            <td>{{ this.name }}</td>
            <td>{{ this.quantity}}</td>
            <td>{{ this.price }}</td>
            <td>
              <input style="width: 5em" type="number" id="newPiece" name="newPiece" max={{ this.quantity}} value=>
              <input type="hidden" id="nameId" name="name" value={{ this.name}}>
              <input type="hidden" id="vendorId" name="vendor" value={{ this.vendor}}>
              <input type="hidden" id="quantityId" name="quantity" value={{ this.quantity}}>
              <input type="hidden" id="priceId" name="price" value={{ this.price }}>
              <input type="submit" value="add to cart">
            </td>
          </form>
        </tr>
        {{/each}}
      </tbody>
    </table>
            <form action="/checkout" method="post">
              <input type="submit" value="checkout Cart">
            </form>



             <h1>
      list of buyed items
    </h1>
    <table class="table table-hover table-dark">
      <thead>
        <tr>
          <th>Item name</th>
          <th>rate (stars)</th>
        </tr>
      </thead>
      <tbody>
        {{# each buyedItems}}
        <tr>
          <form action="/rateItem" method="post">
            <td>{{ this.name }}</td>
            <td>
              <input style="width: 5em" type="number" id="rate" name="rate" max=5 value=>
              <input type="hidden" id="nameId" name="name" value={{ this.name}}>
              <input type="submit" value="OK">
            </td>
          </form>
        </tr>
        {{/each}}
  </main>
